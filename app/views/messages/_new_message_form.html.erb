<div class="form-group msg-form">
  <%= form_with(model: [@single_room ,@message], remote: true, class: "d-flex" ) do |f| %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control", style: "width: 120vh; margin-bottom: 10px;", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary", style: "margin-left: 10px; margin-bottom: 10px;" %>
  <% end %>
</div>