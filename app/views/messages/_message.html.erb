<div class="text-light cont-<%= message.user&.id %>">
  <div class="message-box msg-<%= message.user&.id %>" >
    <% unless message.room_is_private %>
       <h6 class="name">
        <%= message.user&.id == current_user&.id ? 'You' : message.user_username %>
       </h6>
    <% end %>
    <p><%= message.content %></p>
  </div>
</div>