<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sidebar">
      <h5>Hi <%= @current_user.username %></h5>
      <h4>Users</h4>
      <div>
        <%= turbo_stream_from "users" %>
        <div id="users">
          <%= render @users %>
        </div>
      </div>
      <h4>Rooms</h4>
      <%= render partial: "new_room_form" %>
      <div>
        <%= turbo_stream_from "rooms" %>
        <div id="rooms">
          <%= render @rooms %>
        </div>
      </div>
    </div>
    <div class="col-md-10 bg-dark" style="height: 100vh;">
     <% if @single_room %>
       <h4 class="text-center text-light"><%= @single_room.name %></h4>
       <%= turbo_stream_from @single_room %>
       <div id="messages">
         <%= render @messages %>
       </div>
       <%= render partial: 'messages/new_message_form' %>
     <% end %>
    </div>
  </div>
</div>
